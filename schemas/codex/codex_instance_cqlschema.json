{
  "name": "CODEX Instance CQL Schema",
  "description": "Required indexes and operators in CODEX instance search. Providers should report any unsupported indexes/relations as errors.",
  "prefix": "codex",
  "uri": "folio.org/codex",
  "default": true,
  "indexes": [
    {
      "name": "id",
      "type": "string",
      "capability": [
        "search",
        "sort"
      ]
    },
    {
      "name": "title",
      "type": "string",
      "capability": [
        "search",
        "sort"
      ]
    },
    {
      "name": "contributor",
      "type": "string",
      "capability": [
        "search",
        "sort"
      ]
    },
    {
      "name": "publisher",
      "type": "string"
    },
    {
      "name": "subject",
      "type": "string"
    },
    {
      "name": "identifier",
      "type": "string",
      "modifiers": [
        {
          "name": "type",
          "values": [
            "isbn",
            "issn"
          ]
        }
      ]
    },
    {
      "name": "location",
      "type": "string",
      "capability": [
        "filter"
      ]
    },
    {
      "name": "resourceType",
      "type": "string",
      "description": "Resource type filter, see CODEX instance schema for the list of allowed values",
      "capability": [
        "filter"
      ]
    },
    {
      "name": "source",
      "type": "string",
      "capability": [
        "filter"
      ],
      "values": [
        "kb",
        "local",
        "all"
      ]
    },
    {
      "name": "language",
      "type": "string",
      "capability": [
        "filter"
      ]
    },
    {
      "name": "classification",
      "type": "string",
      "capability": [
        "filter"
      ]
    }
  ],
  "operators": [
    {
      "type": "AND",
      "supported": false
    },
    {
      "type": "OR",
      "supported": false
    },
    {
      "type": "NOT",
      "supported": false
    },
    {
      "type": "PROX",
      "supported": false
    }
  ]
}
